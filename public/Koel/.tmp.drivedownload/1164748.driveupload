.correo{
  display: block;
  margin: auto;
  font-size:15px;/*Tamaño de la fuente*/
  width: 440px;
  height: 30px;
  color: #3b3a36;
  background-color: #e9ece5;
  border-radius: 100px;
  margin-bottom: 5px;
}
.profile_img {/*Imagen de cada integrante del equipo*/
    width: 150px;/*Tamaño del ancho de la imagen*/
    height: 150px;/*Tamaño de la altura de la imagen*/
    border-radius: 50%;/*Instrucción que permite mostrar la imagen en radio*/
    margin: 30px;/*Margen de la imagen que tiene con otros elementos*/
    object-fit: cover;/*Ajuste que permite que la imagen cubra el espacio del radio*/
    object-position: center;/*Ajuste que permite mostrar la parte central de la imagen*/
    
  }
